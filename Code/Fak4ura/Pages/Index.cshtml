<div class="container py-5">
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12 text-center mb-5">
                <img id="logo7" src="~/img/logo26.png" alt="logo19">
            </div>
            <div class="row">
                <div class="col-md-6 mx-auto">
                    <!-- form card login -->
                    <div class="card rounded-0 shadow" id="login-form">
                        <div class="card-header">
                            <h3 class="mb-0">User Login</h3>
                        </div>
                        <div class="card-body">
                            <form class="form" role="form" autocomplete="off" id="formLogin" novalidate="" method="POST">
                                <div class="form-group">
                                    <label for="uname1">Nazwa użytkownika</label>
                                    <input type="text" class="form-control form-control-lg rounded-0" name="uname1" id="uname1" required="">

                                </div>
                                <div class="form-group">
                                    <label>Hasło</label>
                                    <input type="password" class="form-control form-control-lg rounded-0" id="pwd1" required="">

                                </div>
                                <div>
                                    <label class="custom-control custom-checkbox">
                                        <a href="javascript:void('register-form-link');" class="register-form-link">Rejestracja</a>
                                    </label>
                                    <label class="custom-control custom-checkbox">
                                        <a href="javascript:void('forgot-form-link');" class="forgot-form-link">Zapomniałem hasła</a>
                                    </label>
                                </div>
                                <button type="submit" class="btn btn-success btn-lg float-right" id="btnLogin">Login</button>
                            </form>
                        </div>
                    </div>
                    <!-- /form card login end-->
                    <!-- form card register -->
                    <div class="card rounded-0 shadow" id="register-form">
                        <div class="card-header">
                            <h3 class="mb-0">Nowe konto</h3>
                        </div>
                        <div class="card-body">
                            <form class="form" role="form" autocomplete="off" id="formLogin" novalidate="" method="POST">
                                <div class="form-group">
                                    <label for="uname1">Nazwa użytkownika</label>
                                    <input type="text" class="form-control form-control-lg rounded-0" name="uname1" id="uname1" required="">

                                </div>
                                <div class="form-group">
                                    <label for="uname1">Imię</label>
                                    <input type="text" class="form-control form-control-lg rounded-0" name="uname1" id="uname1" required="">

                                </div>
                                <div class="form-group">
                                    <label>Hasło</label>
                                    <input type="password" class="form-control form-control-lg rounded-0" id="pwd1" required="" autocomplete="new-password">

                                </div>
                                <div class="form-group">
                                    <label>Potwierdzenie hasła</label>
                                    <input type="password" class="form-control form-control-lg rounded-0" id="pwd1" required="" autocomplete="new-password">

                                </div>
                                <div class="form-group">
                                    <label>E-mail:</label>
                                    <input type="email" class="form-control form-control-lg rounded-0" id="pwd1" required="" autocomplete="new-password">

                                </div>
                                <div>
                                    <label class="custom-control custom-checkbox">
                                        Posiadam konto. <a href="javascript:void('register-form-load');" class="login-form-link">Zaloguj.</a>
                                    </label>
                                </div>
                                <button type="submit" class="btn btn-success btn-lg float-right" id="btnLogin">Rejestracja</button>
                            </form>
                        </div>
                    </div>
                    <!-- /form card register end -->
                    <!-- form card forgot -->
                    <div class="card rounded-0 shadow" id="forgot-form">
                        <div class="card-header">
                            <h3 class="mb-0">Resetuj hasło</h3>
                        </div>
                        <div class="card-body">
                            <form class="form" role="form" autocomplete="off" id="formLogin" novalidate="" method="POST">
                                <div class="form-group">
                                    <label>E-mail</label>
                                    <input type="email" class="form-control form-control-lg rounded-0" id="pwd1" required="" autocomplete="new-password">

                                </div>
                                <div>
                                    <label class="custom-control custom-checkbox">
                                        <a href="javascript:void('register-form-link');" class="register-form-link">Rejestracja</a>
                                    </label>
                                    <label class="custom-control custom-checkbox">
                                        <a href="javascript:void('login-form-link');" class="login-form-link">Login</a>
                                    </label>
                                </div>
                                <button type="submit" class="btn btn-success btn-lg float-right" id="btnLogin">Resetuj hasło</button>
                            </form>
                        </div>
                    </div>
                    <!-- /form card forgot end -->
                </div>
            </div>
        </div>
    </div>
</div>



